{
  "name": "toychest.dev",
  "description": "Offline developer tools",
  "version": "0.1.0",
  "author": {
    "name": "Matthew Peveler",
    "email": "matt.peveler@gmail.com",
    "url": "https://mpeveler.com"
  },
  "private": true,
  "homepage": "./",
  "main": "build/electron.js",
  "dependencies": {
    "classnames": "^2.3.1",
    "lorem-ipsum": "^2.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "web-vitals": "^1.0.1",
    "xml-formatter": "^2.6.0"
  },
  "devDependencies": {
    "@craco/craco": "^6.4.3",
    "@masterodin/eslint-config-typescript": "^3.1.1",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "autoprefixer": "^9",
    "babel-eslint": "^10.1.0",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "electron": "^16.0.4",
    "electron-builder": "^23.0.3",
    "electron-notarize": "^1.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "~24.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^7",
    "prettier": "^2.5.1",
    "react-scripts": "4.0.3",
    "spectron": "^15.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "~4.4.0",
    "wait-on": "^6.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "craco build",
    "dev": "cross-env NODE_ENV=development concurrently -k \"BROWSER=none yarn start\" \"yarn electron\"",
    "eject": "react-scripts eject",
    "electron": "wait-on tcp:3000 && electron .",
    "lint": "eslint --ext .ts,.tsx src",
    "package": "yarn build && electron-builder --publish never",
    "postinstall": "electron-builder install-app-deps",
    "prepare": "husky install",
    "start": "craco start",
    "test": "craco test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "plugins": [
      "jest",
      "react",
      "prettier"
    ],
    "ignorePatterns": "public/electron.js",
    "rules": {
      "brace-style": [
        "error",
        "1tbs"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "eol-last": "error",
      "import/no-cycle": "warn",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          },
          "newlines-between": "always",
          "groups": [
            [
              "builtin",
              "external"
            ],
            "parent",
            "sibling",
            "index",
            "object"
          ]
        }
      ],
      "import/prefer-default-export": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error",
            "info",
            "debug"
          ]
        }
      ],
      "prefer-destructuring": [
        "error",
        {
          "VariableDeclarator": {
            "array": false,
            "object": true
          },
          "AssignmentExpression": {
            "array": false,
            "object": false
          }
        }
      ],
      "prettier/prettier": "error",
      "react/jsx-boolean-value": [
        "error",
        "always"
      ],
      "space-before-function-paren": "off",
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true,
          "ignoreCase": true
        }
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
